# Environment Variables for Fraud Detection System
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
# Uncomment and set if using real AWS credentials
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# LocalStack Configuration (for local development)
AWS_LOCALSTACK_ENABLED=true
AWS_LOCALSTACK_ENDPOINT=http://localhost:4566

# Producer Configuration
PRODUCER_STREAM_NAME=fraud-transactions
PRODUCER_BATCH_SIZE=10
PRODUCER_FRAUD_RATIO=0.05

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=json

# Development Settings
PYTHONUNBUFFERED=1
